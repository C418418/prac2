<Window x:Class="WeatherTranslator.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Переводчик погоды" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Введите слово на русском:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,30,0,0" Grid.ColumnSpan="2"/>

        <Button Content="Перевести" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="116,30,0,0" Click="TranslateButton_Click" Grid.Column="1"/>

        <Label Content="Перевод:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBlock x:Name="TranslationTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Width="350" Grid.ColumnSpan="2"/>
        <Button Content="Выход" HorizontalAlignment="Left" Margin="219,139,0,0" VerticalAlignment="Top" Click="Button_Click" Height="21" Width="55" Grid.Column="1"/>
    </Grid>
</Window>
